{
  "name": "portfolio",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "astro": "astro",
    "build": "npm run tsc && astro build",
    "dev": "astro dev",
    "format": "prettier --write src/**",
    "lint": "eslint --fix --no-inline-config --cache --ext .astro,.html,.js,.jsx,.md,.mdx,.ts,.tsx src",
    "preview": "astro preview",
    "start": "astro dev",
    "tsc": "astro check && tsc --noEmit"
  },
  "dependencies": {
    "@astrojs/check": "^0.3.1",
    "@astrojs/react": "^3.0.7",
    "@astrojs/tailwind": "^5.0.3",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "astro": "^4.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "eslint-plugin-astro": "^0.30.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-markdown": "^3.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "prettier-plugin-astro": "^0.12.2"
  },
  "lint-staged": {
    "src/**/*.{astro,html,js,jsx,md,mdx,ts,tsx}": [
      "npm run format",
      "npm run lint"
    ],
    "src/**/*.astro": "astro check"
  }
}
