---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";

const posts = await Astro.glob("../pages/posts/*.md");
const title = "Blog";
---

<Layout title={title}>
  <main>
    <h1>See our <span class="text-gradient">blogposts</span></h1>
    <p class="instructions">
      Reading our blog posts is like decoding a secret message from a team of
      caffeinated wizardsâ€”grab your virtual wand and prepare for a spellbinding
      journey through the realms of tech sorcery.
    </p>
    <ul class="link-card-grid">
      {
        posts
          .slice(0, 10)
          .map((post) => (
            <Card
              href={post.url}
              title={post.frontmatter.title}
              body={post.frontmatter.description}
            />
          ))
      }
    </ul>
  </main>
</Layout>
