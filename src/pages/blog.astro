---
import { getCollection } from "astro:content";
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";

const posts = await getCollection("posts");
const title = "Blog";
---

<Layout title={title}>
  <main>
    <h1>See our <span class="text-gradient">blogposts</span></h1>
    <p class="instructions">
      Reading our blog posts is like decoding a secret message from a team of
      caffeinated wizardsâ€”grab your virtual wand and prepare for a spellbinding
      journey through the realms of tech sorcery.
    </p>
    <ul class="link-card-grid">
      {
        posts
          .slice(0, 10)
          .map((post) => (
            <Card
              href={`/posts/${post.slug}`}
              title={post.data.title}
              body={post.data.description}
            />
          ))
      }
    </ul>
  </main>
</Layout>
